<!DOCTYPE html>
<html lang="zh-cn" class="login">
<%- include("./public/head.ejs") %>

  <body>
    <section>
      <form action="/login" method="post">
        <div class="form-group">
          <input type="text" name="name" id="" placeholder="登录名" autocomplete="off">
        </div>
        <div class="form-group">
          <input type="password" name="password" id="" placeholder="密码">
          <%if(message) {%>
            <p>
              <%= message%>
            </p>
            <% } %>
        </div>
        <div class="form-group">
          <input type="submit" value="登录">
        </div>
      </form>
    </section>
    <%- include("./public/footer.ejs") %>
  </body>

</html>